@model Web.Backend.Models.DynamicForm.SysTableListViewModel
@{
    ViewData["Title"] = "System Tables";
}

<div class="card card-custom">
    <div id="pnlFilter" class="w-100 collapse">
        <div class="card-header">
            <div class="card-toolbar row">
                <div class="col-lg-4 col-sm-6 d-flex flex-fill align-items-center mb-3">
                    <label class="mr-3 mb-0 d-none d-md-block">Table</label>
                    <input type="text" id="txtTableName" class="form-control ctrl-filter" placeholder="Table Name" />
                </div>
                <div class="col-lg-4 col-sm-6 d-flex flex-fill align-items-center mb-3">
                    <label class="mr-3 mb-0 d-none d-md-block">Enabled Only</label>
                    <span class="switch switch-outline switch-icon switch-brand">
                        <label>
                            <input type="checkbox" id="chkViewEnabled" checked="checked" />
                            <input type="hidden" id="chkViewEnabled" value="true" />
                            <span></span>
                        </label>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-hover datatable datatable-bordered datatable-head-custom" id="ctbl_systable"></div>
    </div>
</div>

<partial name="_Partials/_alertMessage" model="Model.AlertMessages" />

@section Scripts{
    <script type="text/javascript">
    var container_table;
    $(document).ready(function () {
        container_table = $('#ctbl_systable').KTDatatable({
            // datasource definition
            data: {
                type: 'remote',
                source: {
                    read: {
                        url: '@Url.Action("GetDatatable")',
                        params: {
                            Name: function () { return $('#txtTableName').val(); },
                            ViewEnabled: function () { return $('#chkViewEnabled').is(':checked'); },
                        }
                    },
                },
                pageSize: 10,
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true,
                saveState: false,
            },
            layout: {
                scroll: true,
                footer: false,
            },
            sortable: true,
            pagination: true,

            // columns definition
            columns: [
                { field: "id", title: "TableID", width: 120, overflow: 'visible', autoHide: false, sortable: false }
                , { field: "name", title: "Name", width: 200, overflow: 'visible', autoHide: false, sortable: true }
                , { field: "displayName", title: "Display", width: 200, sortable: true }
                , {
                    field: "lastSyncDate", title: "Sync Date", width: 120, textAlign: "center", sortable: true
                    , template: function (row) {//2020-12-29T09:18:13
                        return moment(row["lastSyncDate"]).format('DD-MMM-YY HH:mm');
                    }
                }
                , {
                    field: "enabled", title: "Enabled", width: 90, textAlign: "center"
                    , template: function (row) {
                        var returnText = row["enabled"] ? "YES" : "NO";
                        var resultHTML = "";
                        if (returnText == "YES")
                            resultHTML = '<span class="badge badge-primary">' + returnText + '</span>';
                        else
                            resultHTML = '<span class="badge badge-light">' + returnText + '</span>';
                        return resultHTML;
                    }
                }
                , {
                    field: "Actions", title: "", sortable: false, width: 35, textAlign: "right", overflow: 'visible', autoHide: false
                    , template: function (row) {                        
                        var resultHtml = '\
                        <div class="dropdown dropdown-inline">\
                            <a href="javascript:;" class="btn btn-sm btn-clean btn-icon" data-toggle="dropdown" title="Quick actions">\
                                <i class="ki ki-bold-more-ver"></i>\
                            </a>\
                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">\
                                <ul class="navi flex-column navi-hover py-2">\
                                    <li class="navi-header font-weight-bolder text-uppercase font-size-xs text-primary pb-2">\
                                        Choose an action:\
                                    </li>\
                                    <li class="navi-item">\
                                        <a href="#" class="navi-link btn-quickview" \
                                            data-title="' + row.displayName + '" \
                                            data-link="@(Url.Action("Detail"))/' + row.id + '" > \
                                            <span class="navi-icon"><i class="flaticon-eye"></i></span>\
                                            <span class="navi-text">View detail</span>\
                                        </a></li>\
                                    <li class="navi-item">\
                                        <a class="navi-link" href="@(Url.Action("Edit"))/' + row.id + '" >\
                                            <span class="navi-icon"><i class="flaticon-edit-1"></i></span>\
                                            <span class="navi-text">Edit record</span>\
                                        </a></li>\
                                </ul>\
                            </div >\
                        </div >';
                        return resultHtml;
                    }
                }
            ],
            translate: {
                records: {
                    noRecords: "No records found",
                    processing: "Loading...",
                }
            }
        });

        $('#btnReload, #chkViewEnabled').click(function (e) {
            container_table.reload();
        });

        $('.ctrl-filter').change(function (e) {
            container_table.reload();
        });

        $('#btnRescanDB').click(function () {
            addOverlay('#kt_content', 10000);

            var options = new Object();
            options.url = '@Url.Action("RescanDB")';
            options.type = 'PUT';
            options.success = function (msg) {
                removeOverlay('#kt_content');
                if (msg) {
                    alertMessage(msg);
                }
                container_table.reload();
            };
            options.error = function (xhr) { // if error occured
                removeOverlay('#kt_content');
                toastr.error(xhr.responseText);
            };
            $.ajax(options);
        });

    });
    </script>
}

