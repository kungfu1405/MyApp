@model HomeModel
@{
    ViewData["Title"] = "Home Page";
    Model.ListItemDiscover = new List<ItemDiscover>();
    Model.ListItemDiscover.Add(new ItemDiscover { Tag = "WellnessRetreats", Thumbnail = "/img/home hashtag/wellness&retreats.png", Pillar = EnumPillar.WellnessAndRetreats });
    Model.ListItemDiscover.Add(new ItemDiscover { Tag = "WineDine", Thumbnail = "/img/home hashtag/wine&dine.png", Pillar = EnumPillar.WineAndDine });
    Model.ListItemDiscover.Add(new ItemDiscover { Tag = "CitiesCulture", Thumbnail = "/img/home hashtag/cities&culture.png", Pillar = EnumPillar.CitiesAndCulture });
    Model.ListItemDiscover.Add(new ItemDiscover { Tag = "Activities", Thumbnail = "/img/home hashtag/adventure&exploration.png", Pillar = EnumPillar.AdventureAndExploration });
    Model.ListItemDiscover.Add(new ItemDiscover { Tag = "Nature", Thumbnail = "/img/home hashtag/nature&preservation.png", Pillar = EnumPillar.NatureAndPreservation });
    var top = 0;

    Model.ListConsultant = new List<ItemConsultant>();
    Model.ListConsultant.Add(new ItemConsultant { Name = "Jovel Chan", ObjectName = "Keen Observer", Description = "Award-winning twitter lover. Passionate beer aficionado.", Thumbnail = "/img/Consultant/asset-1.png" });
    Model.ListConsultant.Add(new ItemConsultant { Name = "Bế Duy Kiên", ObjectName = "Adventurous Guy", Description = "Bacon guru. Proud explorer. Certified troublemaker.", Thumbnail = "/img/Consultant/asset-2.png" });
    Model.ListConsultant.Add(new ItemConsultant { Name = "Đặng Thanh Phong", ObjectName = "Professional Traveler", Description = "Pop culture practitioner. Social media enthusiast.", Thumbnail = "/img/Consultant/asset-3.png" });
    Model.ListConsultant.Add(new ItemConsultant { Name = "Bùi Bảo Trâm", ObjectName = "Timely Exploration", Description = "Food enthusiast. Organizer. Devoted beer trailblazer.", Thumbnail = "/img/Consultant/234241.png" });
