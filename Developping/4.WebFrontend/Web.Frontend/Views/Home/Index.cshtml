<div class="container-xxl p-0 m-auto">
    <div class="row px-15">
        <div class="home_banner position-relative slider-auto">
            <div class="swiper-wrapper">
                <img class="swiper-slide" src="~/img/banner/Group 8890.png" />
                <img class="swiper-slide" src="~/img/banner/Group 8888.png" />
                <img class="swiper-slide" src="~/img/banner/Group 8889.png" />
                <img class="swiper-slide" src="~/img/banner/Group 8891.png" />
                <img class="swiper-slide" src="~/img/banner/Group 8892.png" />
                <img class="swiper-slide" src="~/img/banner/Group 8893.png" />
            </div>

            <div class="position-absolute text-center row w-100 home-search">
                <div class="col-xl-8 mx-auto form-group">
                    <form id="frmSearch" action="/search" class="position-relative">
                        <label class="placeholder"><ion-icon name="search-outline"></ion-icon> Search & explore the world!</label>
                        <input class="form-control w-100 position-absolute top-0" id="inpSearch" autocomplete="off" name="q" type="text" placeholder="" />
                        <input type="submit"
                               style="position: absolute; left: -9999px; width: 1px; height: 1px;"
                               tabindex="-1" />
                        <input type="hidden" name="type" id="txtTypeSearch" value="@(EnumTypeSearch.Story.ToString())" />
                        <input type="hidden" name="page" id="txtPage" value="1" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row px-15 px-sm-30">
        <div class="home-txt">
            <h3 class="text-left">A unique community platform</h3>
            <p class="text-left">for travelers to meet, share and discover new travel adventures and memorable experiences.</p>
        </div>
    </div>
    <div class="row position-relative">
        <div class="div-lst-bg">
            <label>Featured Experience.</label>
        </div>
        <div class="home-list div-lst mt-24 overflow-x-hidden" id="toppick">
            <div class="swiper-wrapper">
                @foreach (var itm in Model.ListExperience.Take(12).ToList())
                {
                    top++;
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-48 swiper-slide">
                    <div class="home-item">
                        <div class="w-100 p-0">
                            <div class="thumb m-auto">
                                <a class="" href="@string.Format("/Experience/{0}", itm.RouteUri)">
                                    @if (!string.IsNullOrEmpty(itm.ThumbnailUrl))
                                        {
                                    <img class="rounded" onerror="imgError(this)" src="@string.Format("{0}{1}", UrlList.FileServer, itm.ThumbnailUrl)" />
                                        }
                                        else
                                        {
                                    <img class="rounded" src="~/img/icon-no-image.svg" />
                                        }
                                </a>
                            </div>
                        </div>
                        <div class="content">
                            <p>#@(top) of 319 in Viet nam</p>
                            <h3><a href="@string.Format("/Experience/{0}", itm.RouteUri)">@itm.ExperienceLanguage.Title</a></h3>
                            <p>10.8km from Center Point . 15h </p>
                            <p>N Stops By . N Saves . @string.Format("{0} Comments", itm.TotalComments)</p>
                            <p>
                                @foreach(var tag in itm.Tags)
                                {
                                    <label>@(string.Format("#{0} ", tag.Name))</label>
                                }
                            </p>
                        </div>
                        <span class="fea-rating">
                            <label class="like"><i></i> 128</label>
                            <label class="comment"><i></i> 100</label>
                        </span>
                    </div>
                </div>
                }
            </div>
        </div>
        <div class="swiper-control-toolbar">
            <div class="swiper-control-prev swiper-featured swiper-control"><ion-icon name="caret-back-outline"></ion-icon></div>
            <div class="swiper-control-next swiper-featured swiper-control"><ion-icon name="caret-forward-outline"></ion-icon></div>
        </div>        
    </div>

    <div class="row px-15 px-sm-30">
        <div class="home-txt">
            <h3 class="text-left">Discover New Experiences</h3>
            <p class="text-left">Plan your journey</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="discover_list mt-48 w-100">
        <div class="swiper-wrapper">
            @foreach (var itmDis in Model.ListItemDiscover)
                {
            <div class="col-xxl-20 col-xl-4 col-md-6 col-sm-12 swiper-slide">
                <div class="discover_item text-center">
                    <a class="discover_thumb" href="@(string.Format("Pillars/{0}", itmDis.Tag))">
