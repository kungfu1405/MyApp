    function getDataHomeList(obj) {
        var p = $(obj).attr("data-p");

        $.ajax({
            url: "/Experiences/Data",
            type: "POST",
            data: { page: p },
            success: function (data) {
                var tempMore = "";
                if (data.length > 0) {
                    for (var i = 0; i < data.length; i++) {
                        if (i == 9)
                            continue;

                        tempMore += genTemplateItem(data[i].routeUri, data[i].thumbnailUrl, data[i].experienceLanguage.title, data[i].tags);
                    }

                    $(tempMore).insertBefore(".list-bottom");
                    $(obj).attr("data-p", (p * 1 + 1));
                    if (data.length <= 9)
                        $(".list-bottom").hide();
                }
            }
        });
    }

    function genTemplateItem(uri, thumb, title, tags) {
        var htmlTag = "";
        for (var i = 0; i < tags.length; i++) {
            htmlTag+= '<label>#'+ tags[i].name +' </label> '
        }

        return `<div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-48 swiper-slide">
                    <div class="home-item">
                        <div class="w-100 p-0">
                            <div class="thumb m-auto">
                                <a class="expUri" href="/Experience/`+ uri + `">
                                        <img onerror="imgError(this)" class="rounded" src="@(UrlList.FileServer)` + thumb +`" />
                                    </a>
                                </div>
                            </div>
                            <div class="content">
                                <p>#N of N in Category</p>
                                <h3><a class="expUri" href="/Experience/`+ uri + `">` + title + `</a></h3>
                                <p>10.8km from Center Point . 15h </p>
                                <p>N Stops By . N Saves . N Comments</p>
                                <p>`+ htmlTag +`</p>
                            </div>
                            <span class="fea-rating">
                                <label class="like"><i></i> 128</label>
                                <label class="comment"><i></i> 100</label>
                            </span>
                        </div>
                    </div>`;
        }
</script>